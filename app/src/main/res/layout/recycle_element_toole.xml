<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVNameToole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:padding="@dimen/loyout_padding"
                android:text="tVNameToole"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tVPriceToole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="tVPriceToole" />
        </LinearLayout>

        <TextView
            android:id="@+id/tVWeghtToole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="@dimen/loyout_padding"
            android:text="tVWeghtToole" />

        <TextView
            android:id="@+id/tVDescriptionToole"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/loyout_padding"
            android:text="tVDescriptionToole" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tVTypeToole"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:padding="@dimen/loyout_padding"
                android:text="tVTypeToole" />

            <ImageView
                android:id="@+id/imVDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_close_24" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>